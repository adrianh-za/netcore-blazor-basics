@inject RenderModeSelector RenderModeSelector
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="WebAppTest.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
</head>

<body>

    @if (RenderModeSelector.SelectedRenderMode==null)
    {
        <Routes />
    }
    else
    {
        <Routes @rendermode="@RenderModeSelector.SelectedRenderMode" />
    }

    @if(RenderModeSelector.SelectedRenderMode!=null)
    {
        @(RenderModeSelector.SelectedRenderMode?.ToString())
    }
    else
    {
        <text>SSR&nbsp;</text>
        <a href="/set-render-mode/autoprerendered">Reset</a>
    }
    <script src="_framework/blazor.web.js"></script>
</body>

</html>